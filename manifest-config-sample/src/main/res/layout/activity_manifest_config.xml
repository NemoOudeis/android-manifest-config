<?xml version="1.0" encoding="utf-8"?>
<layout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools">
  <data>
    <variable
      name="config"
      type="com.rakuten.tech.mobile.manifestconfig.sample.Sample"/>
  </data>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ManifestConfigActivity"
    tools:showIn="@layout/activity_manifest_config">

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="8dp"
      android:text='@{"Raw Int : " + config.rawInt()}'/>

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="8dp"
      android:text='@{"Boxed Int : " + config.boxedInt()}'
      />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="8dp"
      android:text='@{"Raw Boolean : " + config.rawBoolean()}'
      />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="8dp"
      android:text='@{"Boxed Boolean : " +config.boxedBoolean()}'
      />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="8dp"
      android:text='@{"String : " + config.string()}'
      />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="8dp"
      android:text='@{"Raw Float : " + config.rawFloat()}'
      />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="8dp"
      android:text='@{"Boxed Float : " + config.boxedFloat()}'
      />
  </LinearLayout>
</layout>